<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

     >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="center name"
            android:padding="3dp"
            android:textColor="@color/black"
            android:layout_margin="3dp"
            android:drawableLeft="@drawable/ic_hospital"
            android:drawablePadding="4dp"
            android:id="@+id/idTVCenterName"
            />
         <TextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="center location"
             android:id="@+id/idTVCenterLocation"
             android:layout_margin="3dp"
             android:padding="3dp"
             android:textColor="@color/black"
             android:drawableStart="@drawable/ic_location"
             android:drawablePadding="4dp"
             android:drawableLeft="@drawable/ic_location"

             />
      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="center"
          android:layout_below="@id/idTVCenterLocation"
          android:textColor="@color/black"
          android:padding="3dp"
          android:layout_margin="3dp"
          android:drawableStart="@drawable/ic_timings"
          android:drawablePadding="4dp"
          android:id="@+id/idTVCenterTimings"
          />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    />
    </RelativeLayout>




</androidx.cardview.widget.CardView>